.item-list{
  /* 弹性盒子布局 flex */
  display: flex;
  /* 沿着水平轴排列 */
  flex-direction: row;
  /* 不换行 */
  flex-wrap: nowrap;
  /* 水平排列方式 */
  justify-content: space-between;
  /* 垂直居中 */
  align-items: center;
  /* 内边距 */
  padding: 20rpx 10rpx 0 10rpx;
}
/* 设置图片样式 */
.item-pic>image{
  /* 设置块状元素 */
  display: block;
  /* 高度 */
  height: 230rpx;
  /* 宽度 */
  width: 230rpx;
  /* 圆角 */
  border-radius: 15rpx;
}
