/* 列表描述样式 */
.item-desc{
  height: 230rpx;
  width: 66%;
  display: flex;
  /* 按列排序 */
  flex-direction: column;
}
.item-desc>view{
  padding-top: 15rpx;
}
/* 设置标题样式 */
.item-title{
  /* 设置文字大小 */
  font-size: 40rpx;
  /* 设置文字颜色 */
  color: #6794FF;
  /* 标题过长，显示省略号... */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 设置类型和时间样式 */
.item-type-time{
  /* flex */
